<body>
    <div class="container">
        <div class="header">
            <h1>üéì Student Result Management System</h1>
            <p>Classes 6 to 10 | 20 Branches</p>
            <button class="admin-btn" onclick="openAdminModal()">Admin Login</button>
        </div>

        <div class="content">
            <!-- Student Search Section -->
            <div id="studentView">
                <div class="search-section">
                    <h2>Search Student Result</h2>
                    <div class="search-form">
                        <div class="form-group">
                            <label>Student Name</label>
                            <input type="text" id="searchName" placeholder="Enter student name">
                        </div>
                        <div class="form-group">
                            <label>Class</label>
                            <select id="searchClass">
                                <option value="">Select Class</option>
                                <option value="6">Class 6</option>
                                <option value="7">Class 7</option>
                                <option value="8">Class 8</option>
                                <option value="9">Class 9</option>
                                <option value="10">Class 10</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Branch</label>
                            <select id="searchBranch">
                                <option value="">Select Branch</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Roll Number</label>
                            <input type="text" id="searchRoll" placeholder="Enter roll number">
                        </div>
                    </div>
                    <button class="search-btn" onclick="searchStudent()">üîç Search Result</button>
                </div>

                <div id="resultDisplay"></div>
            </div>

            <!-- Admin Panel -->
            <div id="adminPanel" class="admin-panel">
                <div class="admin-header">
                    <button class="back-btn" onclick="showStudentView()">‚Üê Back to Search</button>
                    <button class="logout-btn" onclick="logout()">Logout</button>
                </div>

                <div id="adminDashboard">
                    <h2 style="color: #667eea; margin-bottom: 20px;">Admin Dashboard - Manage Marks</h2>
                    
                    <div class="tabs" id="classTabs"></div>
                    
                    <div id="subjectsView" class="class-subjects"></div>
                    
                    <div id="marksEntryView" class="hidden">
                        <button class="back-btn" onclick="showSubjects()">‚Üê Back to Subjects</button>
                        <h3 id="currentSubjectTitle" style="color: #667eea; margin: 20px 0;"></h3>
                        <div class="students-list" id="studentsList"></div>
                        <button class="save-marks-btn" onclick="saveMarks()">üíæ Save Marks</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Login Modal -->
    <div id="adminModal" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeAdminModal()">√ó</span>
            <h2>Admin Login</h2>
            <div class="form-group" style="margin-bottom: 15px;">
                <label>Username</label>
                <input type="text" id="adminUser" placeholder="Enter username">
            </div>
            <div class="form-group" style="margin-bottom: 20px;">
                <label>Password</label>
                <input type="password" id="adminPass" placeholder="Enter password">
            </div>
            <button class="search-btn" style="width: 100%;" onclick="adminLogin()">Login</button>
        </div>
    </div>

    <script>
        // Initialize data structure
        let studentsData = {};
        let currentClass = '6';
        let currentSubject = '';
        let isAdminLoggedIn = false;

        const branches = [];
        for (let i = 1; i <= 20; i++) {
            branches.push(`Branch ${i}`);
        }

        const subjects = {
            '6': ['Bengali', 'English', 'Math', 'Science', 'Social Science'],
            '7': ['Bengali', 'English', 'Math', 'Science', 'Social Science'],
            '8': ['Bengali', 'English', 'Math', 'Science', 'Social Science'],
            '9': ['Bengali', 'English', 'Math', 'Physics', 'Chemistry', 'Biology'],
            '10': ['Bengali', 'English', 'Math', 'Physics', 'Chemistry', 'Biology']
        };

        // Populate branches dropdown
        const branchSelect = document.getElementById('searchBranch');
        branches.forEach(branch => {
            const option = document.createElement('option');
            option.value = branch;
            option.textContent = branch;
            branchSelect.appendChild(option);
        });

        // Initialize with sample data
        function initializeSampleData() {
            const classes = ['6', '7', '8', '9', '10'];
            classes.forEach(cls => {
                studentsData[cls] = {};
                branches.forEach(branch => {
                    studentsData[cls][branch] = [];
                    for (let i = 1; i <= 10; i++) {
                        const student = {
                            name: `Student ${i}`,
                            roll: i,
                            class: cls,
                            branch: branch,
                            marks: {}
                        };
                        subjects[cls].forEach(subject => {
                            student.marks[subject] = 0;
                        });
                        studentsData[cls][branch].push(student);
                    }
                });
            });
        }

        initializeSampleData();

        // Admin Modal Functions
        function openAdminModal() {
            document.getElementById('adminModal').classList.add('active');
        }

        function closeAdminModal() {
            document.getElementById('adminModal').classList.remove('active');
        }

        function adminLogin() {
            const username = document.getElementById('adminUser').value;
            const password = document.getElementById('adminPass').value;

            if (username === 'admin' && password === 'admin') {
                isAdminLoggedIn = true;
                closeAdminModal();
                showAdminPanel();
            } else {
                alert('Invalid username or password!');
            }
        }

        function logout() {
            isAdminLoggedIn = false;
            showStudentView();
        }

        function showAdminPanel() {
            document.getElementById('studentView').style.display = 'none';
            document.getElementById('adminPanel').classList.add('active');
            renderClassTabs();
            showSubjects();
        }

        function showStudentView() {
            document.getElementById('studentView').style.display = 'block';
            document.getElementById('adminPanel').classList.remove('active');
        }

        function renderClassTabs() {
            const tabsDiv = document.getElementById('classTabs');
            tabsDiv.innerHTML = '';
            ['6', '7', '8', '9', '10'].forEach(cls => {
                const btn = document.createElement('button');
                btn.className = 'tab-btn' + (cls === currentClass ? ' active' : '');
                btn.textContent = `Class ${cls}`;
                btn.onclick = () => {
                    currentClass = cls;
                    renderClassTabs();
                    showSubjects();
                };
                tabsDiv.appendChild(btn);
            });
        }

        function showSubjects() {
            document.getElementById('subjectsView').classList.remove('hidden');
            document.getElementById('marksEntryView').classList.add('hidden');
            
            const subjectsDiv = document.getElementById('subjectsView');
            subjectsDiv.innerHTML = '';
            
            subjects[currentClass].forEach(subject => {
                const card = document.createElement('div');
                card.className = 'subject-card';
                card.innerHTML = `<h3>üìö ${subject}</h3><p>Click to enter marks</p>`;
                card.onclick = () => showMarksEntry(subject);
                subjectsDiv.appendChild(card);
            });
        }

        function showMarksEntry(subject) {
            currentSubject = subject;
            document.getElementById('subjectsView').classList.add('hidden');
            document.getElementById('marksEntryView').classList.remove('hidden');
            document.getElementById('currentSubjectTitle').textContent = `Class ${currentClass} - ${subject}`;
            
            const studentsListDiv = document.getElementById('studentsList');
            studentsListDiv.innerHTML = '';
            
            // Show students from all branches for this class
            branches.forEach(branch => {
                const branchStudents = studentsData[currentClass][branch];
                
                const branchTitle = document.createElement('h4');
                branchTitle.textContent = branch;
                branchTitle.style.color = '#667eea';
                branchTitle.style.marginTop = '20px';
                studentsListDiv.appendChild(branchTitle);
                
                branchStudents.forEach((student, index) => {
                    const row = document.createElement('div');
                    row.className = 'student-row';
                    row.innerHTML = `
                        <span><strong>${student.name}</strong> (Roll: ${student.roll})</span>
                        <input type="number" min="0" max="100" value="${student.marks[subject] || 0}" 
                               id="mark_${currentClass}_${branch}_${index}" 
                               placeholder="Enter marks">
                    `;
                    studentsListDiv.appendChild(row);
                });
            });
        }

        function saveMarks() {
            branches.forEach(branch => {
                const branchStudents = studentsData[currentClass][branch];
                branchStudents.forEach((student, index) => {
                    const input = document.getElementById(`mark_${currentClass}_${branch}_${index}`);
                    if (input) {
                        student.marks[currentSubject] = parseInt(input.value) || 0;
                    }
                });
            });
            alert('Marks saved successfully!');
            showSubjects();
        }

        function searchStudent() {
            const name = document.getElementById('searchName').value.trim().toLowerCase();
            const cls = document.getElementById('searchClass').value;
            const branch = document.getElementById('searchBranch').value;
            const roll = document.getElementById('searchRoll').value.trim();

            if (!cls && !branch && !roll && !name) {
                alert('Please enter at least one search criteria!');
                return;
            }

            let foundStudent = null;

            // Search through all classes and branches
            const classesToSearch = cls ? [cls] : Object.keys(studentsData);
            
            for (let c of classesToSearch) {
                const branchesToSearch = branch ? [branch] : branches;
                
                for (let b of branchesToSearch) {
                    const students = studentsData[c][b];
                    
                    foundStudent = students.find(student => {
                        const nameMatch = !name || student.name.toLowerCase().includes(name);
                        const rollMatch = !roll || student.roll.toString() === roll;
                        return nameMatch && rollMatch;
                    });
                    
                    if (foundStudent) break;
                }
                
                if (foundStudent) break;
            }

            if (foundStudent) {
                displayResult(foundStudent);
            } else {
                document.getElementById('resultDisplay').innerHTML = `
                    <div class="result-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <h3>‚ùå No Result Found</h3>
                        <p>Please check your search criteria and try again.</p>
                    </div>
                `;
            }
        }

        function displayResult(student) {
            let totalMarks = 0;
            let marksRows = '';
            
            const classSubjects = subjects[student.class];
            classSubjects.forEach(subject => {
                const mark = student.marks[subject] || 0;
                totalMarks += mark;
                marksRows += `
                    <tr>
                        <td>${subject}</td>
                        <td>${mark}</td>
                    </tr>
                `;
            });

            const percentage = ((totalMarks / (classSubjects.length * 100)) * 100).toFixed(2);
            const grade = percentage >= 80 ? 'A+' : percentage >= 70 ? 'A' : percentage >= 60 ? 'B' : percentage >= 50 ? 'C' : percentage >= 40 ? 'D' : 'F';

            document.getElementById('resultDisplay').innerHTML = `
                <div class="result-card">
                    <h3>üéì Student Result</h3>
                    <div class="result-info">
                        <div class="info-item">
                            <strong>Name:</strong> ${student.name}
                        </div>
                        <div class="info-item">
                            <strong>Roll:</strong> ${student.roll}
                        </div>
                        <div class="info-item">
                            <strong>Class:</strong> ${student.class}
                        </div>
                        <div class="info-item">
                            <strong>Branch:</strong> ${student.branch}
                        </div>
                    </div>
                    <div class="marks-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Subject</th>
                                    <th>Marks</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${marksRows}
                                <tr class="total-row">
                                    <td>Total</td>
                                    <td>${totalMarks} / ${classSubjects.length * 100}</td>
                                </tr>
                                <tr class="total-row">
                                    <td>Percentage</td>
                                    <td>${percentage}%</td>
                                </tr>
                                <tr class="total-row">
                                    <td>Grade</td>
                                    <td>${grade}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            `;
        }
    </script>
</body>
</html>
